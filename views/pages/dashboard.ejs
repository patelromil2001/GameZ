<div class="dashboard-banner">
  <h1>Welcome to GameZ</h1>
  <p>Discover your next favorite game!</p>
</div>

<section class="game-section">
  <h2>ðŸ†• New Releases</h2>
  <div class="game-grid">
    <% if (newReleases && newReleases.length > 0) { %>
      <% newReleases.forEach(game => { %>
        <a href="/games/game/<%= game._id %>" class="game-card">
          <img
            src="<%= game.header_image || '/assets/images/default_game.jpg' %>" 
            alt="<%= game.name %>"
            class="game-img"
          />
          <h3><%= game.name %></h3>
          <p>$<%= game.price %></p>
        </a>
      <% }) %>
    <% } else { %>
      <p>No new releases found.</p>
    <% } %>
  </div>
</section>

